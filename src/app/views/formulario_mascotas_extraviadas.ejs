    <div id="contact" class="section wb">
        <div class="container">
            <div class="section-title row text-center">
                <div class="col-md-8 offset-md-2">
                    <small>¡Bienvenido a Huellitas con Amor!</small>
                    <h3 class="titulo">Formulario mascotas extraviadas</h3>
                </div>
            </div>
            <!-- end title -->

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="contact_form" style="box-shadow: 3px 3px 3px 3px black; border-radius: 30px;">
                        <div id="message"></div>
                        <form id="contactform" class="row" action="/formulario_mascotas_extraviadas" name="contactform" method="post">
                            <fieldset class="row row-fluid">
                                <div class="container">
                                    <div class="section-title row text-center">
                                        <div class="col-md-8 offset-md-2">
                    
                                            <h3 class="titulo3">Información dueño de la mascota</h3>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Documento</label>
                                    <input type="text" name="input_documento_dueño"  class="form-control" placeholder="documento del dueño" required>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Nombre del dueño</label>
                                    <input type="text" name="input_nombre_dueño"  class="form-control" placeholder="nombre del dueño" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Correo electrónico</label>
                                    <input type="email" name="email_dueño_mascota" id="inputCorreo" class="form-control" placeholder="Tu Email" required>
                                </div>

                                   <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Teléfono</label>
                                    <input type="text" name="telefono_dueño_mascota" id="phone" class="form-control" placeholder="Teléfono" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Dirección</label>
                                    <input type="text" name="direccion_dueño_mascota" id="direccion" class="form-control" placeholder="dirección" required>
                                </div>

                                 <div class="container">
                                    <div class="section-title row text-center">
                                        <div class="col-md-8 offset-md-2">
                  
                                            <h3 class="titulo3">Información mascota</h3>
                                         </div>
                                    </div>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Nombre de tu mascota</label>
                                    <input type="text" name="nombre_mascota" class="form-control" placeholder="Nombre de tu mascota" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Fecha de nacimiento de tu mascota</label>
                                    <input type="date" name="input_fecha_de_nacimiento_mascota" class="form-control" placeholder="fecha de nacimiento de tu mascota" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Raza de tu mascota</label>
                                    <input type="text" name="raza_mascota" class="form-control" placeholder="Raza de tu mascota" required>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label">Sexo de tu mascota</label>
                                   <select class="form-control" name="sexo_mascota" required>
                                    <option value="M">Macho</option>
                                    <option value="H">Hembra</option>   
                                   </select>
                                </div>


                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <label class="label">Foto de tu mascota</label>
                                <input type="text" name="input_foto_mascota" class="form-control" placeholder="Foto de tu mascota">
                            </div>

                                
                              
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <button onclick="validarDatos()" type="submit" value="SEND" id="enviar" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">Enviar</button>
                                </div>
                            </fieldset>
                        </form>
